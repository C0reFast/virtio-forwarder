#ifndef VRELAY_VERSION_H
#define VRELAY_VERSION_H

#ifdef	__cplusplus
extern "C" {
#endif

#include <stdint.h>
#include <string.h>
#include <stdio.h>

#define VIRTIO_FWD_VERSION_MAJOR 0 // Autogenerated from Makefile
#define VIRTIO_FWD_VERSION_MINOR 0 // Autogenerated from Makefile
#define VIRTIO_FWD_VERSION_PATCH 0 // Autogenerated from Makefile
#define VIRTIO_FWD_VERSION_BUILD 0 // Autogenerated from Makefile
#define VIRTIO_FWD_VERSION_SHASH "" // Autogenerated from Makefile

/**
 * @brief Return virtio-forwarder version number string.
 * @return string
 */
static inline const char *virtio_forwarder_version(void)
{
	static char version[32];

	if (version[0])
		return version;
	snprintf(version, sizeof(version), "%u.%u.%u-%u-%s",
		VIRTIO_FWD_VERSION_MAJOR, VIRTIO_FWD_VERSION_MINOR,
		VIRTIO_FWD_VERSION_PATCH, VIRTIO_FWD_VERSION_BUILD,
		VIRTIO_FWD_VERSION_SHASH);

	return version;
}

#ifdef	__cplusplus
}
#endif

#endif	/* VRELAY_VERSION_H */
